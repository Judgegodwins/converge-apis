doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", href="./css/login-up.css")
  body
    #main.material-theme--main
      .form-container.material-theme--container
        .account-action.material-theme--account-action
          a(href="/create_account")
            button.action-btn.material-theme--btn
              span Create an account.

        #create-account.form-wrapper  
          form#create-account(action="/create_account", method="POST")
            .form-content-cont
              .input-field-cont
                input#username.material-theme--input(type="text", name="username", autocomplete="off", required="required")
                label(for="username")
                  span Username
              .group-cont
                .input-field-cont
                  input#firstname.material-theme--input(type="text", name="firstname", autocomplete="off", required="required")
                  label(for="firstname")
                    span First Name
                .input-field-cont
                  input#lastname.material-theme--input(type="text", name="lastname", autocomplete="off", required="required")
                  label(for="lastname")
                    span Last Name
              .group-cont
                label(for="male") Male
                input#male(type="radio" name="gender" value="male") 

                label(for="female") Female
                input#female(type="radio" name="gender" value="female") 

              .input-field-cont
                input#password.material-theme--input(type="password", name="password", autocomplete="new-password", required="required")
                label(for="password")
                  span Password

              button.action-btn.material-theme--btn(type="submit")
                span Sign Up


        .form-wrapper
          form#sign-in(action="/login", method="POST")
            .form-content-cont
              .input-field-cont
                input#username.material-theme--input(type="text", name="username", autocomplete="off", required="required")
                label(for="username")
                  span Username
              .input-field-cont
                input#password.material-theme--input(type="password", name="password", autocomplete="new-password", required="required")
                label(for="password")
                  span Password
              button.action-btn.material-theme--btn(type="submit")
                span Login


    script(src="./js/account-func.js")
